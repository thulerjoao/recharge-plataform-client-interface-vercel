{
  "private": true,
  "workspaces": {
    "packages": [
      "projects/*",
      "packages/*",
      "setup/*"
    ]
  },
  "scripts": {
    "web-public": "yarn workspace @4miga/web-public",
    "dev:web-public": "yarn web-public dev",
    "build:web-public": "yarn web-public build",
    "start": "yarn web-public start",
    "lint": "yarn workspaces run lint",
    "lint:web-public": "yarn web-public lint",
    "services": "yarn workspace @4miga/services",
    "test:services": "yarn services test",
    "design-system": "yarn workspace @4miga/design-system",
    "test:design-system": "yarn design-system test",
    "test": "yarn workspaces run test"
  },
  "dependencies": {
    "styled-components": "6.1.8"
  },
  "devDependencies": {
    "@types/styled-components": "5.1.34",
    "@types/node": "22.6.1",
    "@types/react": "18.3.9",
    "typescript": "4.5.5",
    "eslint": "8.57.0",
    "prettier": "3.2.5"
  }
}
